import type { Actions, PageServerLoad } from "./$types";

import { fail } from "@sveltejs/kit";

import { authClient } from "@/auth/auth-client";
import { superValidate } from "sveltekit-superforms";
import { zod } from "sveltekit-superforms/adapters";
import { formSchema } from "./schema";

export const load: PageServerLoad = async () => {
  return {
    form: await superValidate(zod(formSchema as any)),
  };
};

export const actions: Actions = {
  default: async (event) => {
    const form = (await superValidate(
      event,
      zod(formSchema as any)
    )) as unknown as {
      valid: boolean;
      data: {
        fullname: string;
        email: string;
        password: string;
        passwordConfirm: string;
      };
    };

    if (!form.valid) {
      return fail(400, {
        form,
      });
    }

    // Use the form data for signup instead of hardcoded values
    const { error } = await authClient.signUp.email({
      email: form.data.email,
      password: form.data.password,

      name: form.data.fullname, // Optional: extract name from email
      image: undefined, // Optional: you can add image logic if needed

      callbackURL: "/",
    });

    console.log(form);

    if (error) {
      return fail(400, {
        form,
        message: error.message || "Signup failed",
      });
    }

    // If signup is successful, you might want to redirect or set a success message
    return {
      form,
      message: "Signup successful",
    };
  },
};
