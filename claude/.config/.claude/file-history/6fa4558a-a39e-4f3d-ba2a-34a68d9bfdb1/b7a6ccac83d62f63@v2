import * as fs from 'fs';
import * as path from 'path';

export interface Challenge {
  id: string; // "fd-1", "sed-3", etc.
  title: string;
  story: string;
  setup: () => void;
  validation: () => boolean;
  hints: string[];
  solution: string;
  tool: Tool;
  difficulty: number; // 1-5 scale for gradual progression
  estimatedTime: number; // in minutes
  prerequisites?: string[]; // For unlocking system
}

export type Tool = 'fd' | 'sed' | 'awk' | 'jq' | 'rsync';

export interface GameState {
  currentTool: Tool | null;
  currentChallengeInTool: number;
  completedChallenges: string[];
  unlockedTools: Tool[];
  hintsUsed: { [key: string]: number };
  startTime: number;
  toolProgress: { [tool in Tool]: number }; // 0-5 per tool
}

export interface ToolInfo {
  name: Tool;
  displayName: string;
  description: string;
  icon: string;
  unlocked: boolean;
  progress: number; // 0-5
}